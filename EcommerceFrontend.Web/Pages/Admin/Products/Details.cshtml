@page "{id:int}"
@model Admin.Products.DetailsModel
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
<h2>Chi tiết sản phẩm</h2>
@if (Model.Product != null)
{
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Product.ProductId</dd>
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Product.BasePrice.ToString("N0")</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Product.CategoryName</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Product.Description</dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.Product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-2">Ngày cập nhật</dt>
        <dd class="col-sm-10">@Model.Product.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
}
else
{
    <div class="alert alert-danger">Không tìm thấy sản phẩm.</div>
} 
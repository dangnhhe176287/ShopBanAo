@page 
@model EcommerceFrontend.Web.Pages.Admin.Blogs.EditModel
@{
    ViewData["Title"] = "Edit Blog";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Edit Blog</h2>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Blog.BlogId" />

                    <div class="mb-3">
                        <label asp-for="Blog.BlogTittle" class="form-label">Title</label>
                        <input asp-for="Blog.BlogTittle" class="form-control" />
                        <span asp-validation-for="Blog.BlogTittle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Blog.BlogContent" class="form-label">Content</label>
                        <textarea asp-for="Blog.BlogContent" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Blog.BlogContent" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Blog.BlogCategoryId" class="form-label">Category ID</label>
                        <input asp-for="Blog.BlogCategoryId" type="number" class="form-control" />
                        <span asp-validation-for="Blog.BlogCategoryId" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

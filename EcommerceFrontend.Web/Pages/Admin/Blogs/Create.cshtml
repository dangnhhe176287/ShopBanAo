@page
@model EcommerceFrontend.Web.Pages.Admin.Blogs.CreateModel

@{
    ViewData["Title"] = "Thêm Blog";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Tạo Blog Mới</h2>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Blog.BlogTittle" class="form-label">Tiêu đề</label>
                        <input asp-for="Blog.BlogTittle" class="form-control" />
                        <span asp-validation-for="Blog.BlogTittle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Blog.BlogContent" class="form-label">Nội dung</label>
                        <textarea asp-for="Blog.BlogContent" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Blog.BlogContent" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Blog.BlogCategoryId" class="form-label">Danh mục</label>
                        <input asp-for="Blog.BlogCategoryId" class="form-control" />
                        <span asp-validation-for="Blog.BlogCategoryId" class="text-danger"></span>
                    </div>

               

                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Lưu</button>
                        <a asp-page="Index" class="btn btn-outline-secondary ms-2">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

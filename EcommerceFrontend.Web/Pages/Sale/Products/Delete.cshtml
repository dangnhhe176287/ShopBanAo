@page
@model EcommerceFrontend.Web.Pages.Sale.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div>
    <h3>Are you sure you want to delete this product?</h3>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Product.Brand</dd>
    </dl>

    <form method="post">
        <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
@page
@model EcommerceFrontend.Web.Pages.Sale.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post">
    <!-- ProductId -->
    <div class="form-group">
        <label asp-for="Product.ProductId">Product ID</label>
        <input asp-for="Product.ProductId" class="form-control" readonly />
    </div>

    <!-- Basic Info -->
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductCategoryId"></label>
        <input asp-for="Product.ProductCategoryId" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.Brand"></label>
        <input asp-for="Product.Brand" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.BasePrice"></label>
        <input asp-for="Product.BasePrice" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.Status"></label>
        <input asp-for="Product.Status" type="number" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="Product.IsDelete" class="form-check-input" />
        <label asp-for="Product.IsDelete" class="form-check-label">Mark as Deleted</label>
    </div>

    <!-- Image URL -->
    <div class="form-group">
        <label>Product Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <!-- Available Attributes -->
    <div class="form-group">
        <label>Available Sizes (comma separated)</label>
        <input asp-for="AvailableSizes" class="form-control" />
    </div>
    <div class="form-group">
        <label>Available Colors (comma separated)</label>
        <input asp-for="AvailableColors" class="form-control" />
    </div>

    <!-- Variants -->
    <h4>Variants</h4>
    <div id="variantsContainer">
        @if (Model.VariantDisplays != null && Model.VariantDisplays.Count > 0)
        {
            @for (int i = 0; i < Model.VariantDisplays.Count; i++)
            {
                <div class="border p-2 mb-2">
                    <div class="form-row">
                        <div class="col">
                            <label>Size</label>
                            <input name="VariantDisplays[@i].Size" class="form-control" value="@Model.VariantDisplays[i].Size" />
                        </div>
                        <div class="col">
                            <label>Color</label>
                            <input name="VariantDisplays[@i].Color" class="form-control" value="@Model.VariantDisplays[i].Color" />
                        </div>
                        <div class="col">
                            <label>Price</label>
                            <input name="VariantDisplays[@i].Price" type="number" step="0.01" class="form-control" value="@Model.VariantDisplays[i].Price" />
                        </div>
                        <div class="col">
                            <label>Stock</label>
                            <input name="VariantDisplays[@i].Stock" type="number" class="form-control" value="@Model.VariantDisplays[i].Stock" />
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-muted">No variants available.</div>
        }
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model EcommerceFrontend.Web.Pages.Sale.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<form method="post">
    <!-- Basic Info -->
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductCategoryId"></label>
        <input asp-for="Product.ProductCategoryId" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.Brand"></label>
        <input asp-for="Product.Brand" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.BasePrice"></label>
        <input asp-for="Product.BasePrice" type="number" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Product.Status"></label>
        <input asp-for="Product.Status" type="number" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="Product.IsDelete" class="form-check-input" />
        <label asp-for="Product.IsDelete" class="form-check-label">Mark as Deleted</label>
    </div>
    <div class="form-group">
        <label>Product Image URL</label>
        <input asp-for="Product.ImageUrl" class="form-control" />
    </div>

    <!-- Available Attributes -->
    <div class="form-group">
        <label>Available Sizes (comma separated)</label>
        <input name="Product.AvailableSizes" class="form-control" placeholder="S,M,L" />
    </div>
    <div class="form-group">
        <label>Available Colors (comma separated)</label>
        <input name="Product.AvailableColors" class="form-control" placeholder="Black,White" />
    </div>

    <!-- Variants -->
    <h4>Variants</h4>
    <div id="variantsContainer">
        @if (Model.Product?.Variants != null){
            @for (int i = 0; i < Model.Product.Variants.Count; i++)
            {
                <div class="border p-2 mb-2">
                    <div class="form-row">
                        <div class="col">
                            <input name="Product.Variants[@i].Size" class="form-control" placeholder="Size" value="@Model.Product.Variants[i].Size" />
                        </div>
                        <div class="col">
                            <input name="Product.Variants[@i].Color" class="form-control" placeholder="Color" value="@Model.Product.Variants[i].Color" />
                        </div>
                        <div class="col">
                            <input name="Product.Variants[@i].Price" class="form-control" placeholder="Price" value="@Model.Product.Variants[i].Price" />
                        </div>
                        <div class="col">
                            <input name="Product.Variants[@i].Stock" class="form-control" placeholder="Stock" value="@Model.Product.Variants[i].Stock" />
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

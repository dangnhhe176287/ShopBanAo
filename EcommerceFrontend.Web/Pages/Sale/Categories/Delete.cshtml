@page
@model EcommerceFrontend.Web.Pages.Sale.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}
<h1>Delete Category</h1>

<div>
    <h3>Are you sure you want to delete this category?</h3>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Category.ProductCategoryId</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Category.ProductCategoryTitle</dd>
    </dl>

    <form method="post">
        <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back</a>
    </form>
</div>

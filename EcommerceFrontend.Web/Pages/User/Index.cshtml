@page
@using EcommerceFrontend.Web.Models.User
@model EcommerceFrontend.Web.Pages.User.IndexModel

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Danh sách người dùng</h2>

                <div class="mb-3 text-end">
                    <a asp-page="Create" class="btn btn-primary">Thêm mới</a>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Role ID</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Địa chỉ</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Đã xóa</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Users)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>@u.Email</td>
                                <td>@u.RoleId</td>
                                <td>@u.Phone</td>
                                <td>@u.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td>@u.Address</td>
                                <td>@u.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(u.Status == 1 ? "Active" : "Inactive")</td>
                                <td>@(u.IsDelete ? "Yes" : "No")</td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@u.UserId" class="btn btn-sm btn-warning">Sửa</a>
                                    <a asp-page="Delete" asp-route-id="@u.UserId" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
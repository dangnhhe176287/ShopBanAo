@page "{id:int}"
@model EcommerceFrontend.Web.Pages.User.EditModel
@{
    ViewData["Title"] = "Cập nhật người dùng";
    Layout = "_AdminLayout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Cập nhật người dùng</h2>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="User.UserId" />

                    <div class="mb-3">
                        <label asp-for="User.UserName" class="form-label">Tên</label>
                        <input asp-for="User.UserName" class="form-control" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                        <input asp-for="User.Password" type="password" class="form-control" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.RoleId" class="form-label">Role ID</label>
                        <input asp-for="User.RoleId" class="form-control" type="number" />
                        <span asp-validation-for="User.RoleId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Phone" class="form-label">Số điện thoại</label>
                        <input asp-for="User.Phone" class="form-control" />
                        <span asp-validation-for="User.Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.DateOfBirth" class="form-label">Ngày sinh</label>
                        <input asp-for="User.DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="User.DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Address" class="form-label">Địa chỉ</label>
                        <input asp-for="User.Address" class="form-control" />
                        <span asp-validation-for="User.Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.CreateDate" class="form-label">Ngày tạo</label>
                        <input asp-for="User.CreateDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="User.CreateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="User.Status" class="form-label">Trạng thái</label>
                        <select asp-for="User.Status" class="form-control">
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="User.Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="User.IsDelete" class="form-check-input" type="checkbox" />
                        <label asp-for="User.IsDelete" class="form-check-label">Đã xóa</label>
                        <span asp-validation-for="User.IsDelete" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a asp-page="/User/Index" class="btn btn-outline-secondary ms-2">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}